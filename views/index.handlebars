<div class="container">



  <div class="container2">
    <form action="/" method="POST">

      <h1>PLEASE GREET</h1>

      <div class="entry">
        {{#if messages.info}}
        <h4> {{messages.info}}</h4>
        {{/if}}
      </div>
      <div class="message">
        <h4>{{message}}</h4>
      </div>
      <div class="textBox">
        <label for="name">Name</label>
        <input type="text" id="myText" name="name" value="" placeholder="write name" class="textbox" />
      </div>

      <div class="radio">
        <input type="radio" id="radiobutton1" name="language" value="Xhosa" class="radioButton">Xhosa
        <input type="radio" id="radiobutton1" name="language" value="English" class="radioButton">English
        <input type="radio" id="radiobutton1" name="language" value="Afrikaans" class="radioButton">Afrikaans
      </div>


      <div class="resetbutton">
        <input type="submit" value="greet">
        <button type="submit"> <a href="/reset"> reset </a></button>

      </div>


      <div class="counter">
        <h3>COUNTER</h3>
        <h4>{{counter}}</h4>

      </div>
      <div class="greetedBTN">
        <a href="/greeted">greeted names</a>

      </div>
  </div>
  </form>
</div>
</div>